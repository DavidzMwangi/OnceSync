<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty"
        android:layout_marginEnd="@dimen/twenty"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/twenty"
        android:layout_marginBottom="@dimen/twenty">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_linear"

                android:id="@+id/add_farmer"
                android:layout_marginEnd="@dimen/ten"
                android:layout_height="180dp"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/twenty"

                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_action_person_add_black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/five"
                    android:layout_marginEnd="@dimen/five"
                    android:textSize="@dimen/twenty"
                    android:text="Add A Farmer"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_linear"
                android:layout_marginStart="@dimen/ten"
                android:layout_height="180dp"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/twenty"

                    android:src="@drawable/ic_action_person_black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/five"
                    android:layout_marginEnd="@dimen/five"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"

                    android:textSize="@dimen/twenty"
                    android:text="Edit Farmer Details "
                    android:layout_marginBottom="@dimen/five"
                    />
            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/twenty"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_linear"

                android:id="@+id/add_collection"
                android:layout_marginEnd="@dimen/ten"
                android:layout_height="180dp"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/ten"

                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_action_shopping"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/five"
                    android:layout_marginEnd="@dimen/five"
                    android:textSize="@dimen/twenty"
                    android:text="Add A Collection"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_linear"
                android:layout_marginStart="@dimen/ten"
                android:layout_height="180dp"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ten"
                    android:src="@drawable/ic_action_trending_up"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/five"
                    android:layout_marginEnd="@dimen/five"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"

                    android:textSize="@dimen/twenty"
                    android:text="Today's Collection "
                    android:layout_marginBottom="@dimen/five"
                    />
            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/twenty"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_linear"

                android:layout_marginEnd="@dimen/ten"
                android:layout_height="180dp"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_action_badge"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/five"
                    android:layout_marginEnd="@dimen/five"
                    android:textSize="@dimen/twenty"
                    android:text="Show Badge"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_linear"
                android:layout_marginStart="@dimen/ten"
                android:layout_height="180dp"

                android:orientation="vertical">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_action_build"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/five"
                    android:layout_marginEnd="@dimen/five"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"

                    android:textSize="@dimen/twenty"
                    android:text="Settings"
                    android:layout_marginBottom="@dimen/five"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>